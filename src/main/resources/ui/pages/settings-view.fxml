        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <GridPane prefHeight="434.0" prefWidth="690.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="436.0" minWidth="10.0" prefWidth="417.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="327.0" minWidth="10.0" prefWidth="273.0" />
