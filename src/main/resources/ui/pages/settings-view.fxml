                <Font size="16.0" />
            </font>
        </Label>
        <CheckBox fx:id="referring" minWidth="-Infinity" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" />

    </GridPane>
    <HBox alignment="CENTER" prefHeight="26.0" prefWidth="271.0" spacing="50.0">
        <Button fx:id="prevButton" mnemonicParsing="false" onMouseClicked="#goPrevPage" prefHeight="25.0" prefWidth="175.0" text="Назад" />
        <Button fx:id="nextButton" mnemonicParsing="false" onMouseClicked="#goNextPage" prefHeight="25.0" prefWidth="183.0" text="Начать анализ" />
