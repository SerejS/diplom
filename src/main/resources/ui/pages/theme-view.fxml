<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="495.0" prefWidth="856.0" spacing="20.0" stylesheets="@../style/index.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.pages.ThemeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="titleProject" promptText="Название проекта">
      <font>
         <Font size="20.0" />
      </font>
   </TextField>
    <Label text="Добавление тем">
        <font>
            <Font size="26.0" />
        </font>
    </Label>
    <TableView fx:id="table" prefHeight="295.0" prefWidth="773.0" />
    <HBox alignment="CENTER" prefHeight="26.0" prefWidth="271.0" spacing="50.0">
        <Button fx:id="prevButton" mnemonicParsing="false" onMouseClicked="#goPrevPage" text="Назад" />
        <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onMouseClicked="#deleteRow" prefHeight="25.0" prefWidth="133.0" text="Удалить тему" />
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#openModal" prefHeight="25.0" prefWidth="133.0" text="Добавить тему" />
        <Button fx:id="nextButton" mnemonicParsing="false" onMouseClicked="#goNextPage" text="Дальше" />
    </HBox>


</VBox>
