<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="366.0" prefWidth="487.0" spacing="20.0" stylesheets="@../style/index.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.UserViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Выбирете отображение">
        <font>
            <Font size="26.0" />
        </font>
    </Label>
    <ListView fx:id="listView" cacheShape="false" centerShape="false" focusTraversable="false" onMouseClicked="#select" prefHeight="240.0" prefWidth="318.0" scaleShape="false" style="-fx-border-color: #D7D2FB; -fx-border-width: 3px; -fx-fixed-cell-size: 40;" />

    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="318.0" spacing="50.0">
        <children>
            <Button fx:id="selectButton" disable="true" mnemonicParsing="false" onAction="#goNextPage" text="Выбрать" />
            <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteListItem" prefHeight="3.0" prefWidth="60.0" text="Удалить" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#openModal" text="Создать" />
        </children>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>

</VBox>
