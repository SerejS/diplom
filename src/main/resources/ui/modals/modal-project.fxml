<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="181.0" prefWidth="396.0" spacing="20.0" stylesheets="@../style/modal.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.modals.ModalProjectController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <Label text="Создание нового проекта">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="title" prefHeight="10.0" prefWidth="401.0" promptText="Название проекта" style="-fx-font-size: 18;" />

    <HBox alignment="CENTER" prefHeight="57.0" prefWidth="318.0" spacing="50.0">
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#createProject" text="Создать" />
        <Button fx:id="closeButton" mnemonicParsing="false" text="Отменить" />
    </HBox>
</VBox>
