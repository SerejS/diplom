<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="228.0" prefWidth="441.0" spacing="20.0" stylesheets="@../style/modal.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.modals.ModalTypeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <Label text="Добавить новый тип литературы">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="title" prefHeight="58.0" prefWidth="318.0" promptText="Название типа" style="-fx-font-size: 18;" />
    <CheckBox fx:id="main" mnemonicParsing="false" style="-fx-font-size: 18;" text="Основная литература" />
    <HBox alignment="CENTER" prefHeight="57.0" prefWidth="318.0" spacing="50.0">
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addType" text="Создать" />
        <Button fx:id="closeButton" mnemonicParsing="false" text="Отменить" />
    </HBox>
</VBox>
