<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="665.0" spacing="20.0" style="-fx-background-color: D7D2FB;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.FilesViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Добавление файлов">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TableView fx:id="tableTheme" prefHeight="397.0" prefWidth="625.0">
        <columns>
            <TableColumn editable="false" prefWidth="184.0" sortable="false" text="Источник" />
            <TableColumn editable="false" prefWidth="182.0" sortable="false" text="Тип литературы" />
         <TableColumn editable="false" prefWidth="182.0" sortable="false" text="Формат" />
        </columns>
    </TableView>
    <HBox alignment="CENTER" prefHeight="26.0" prefWidth="271.0" spacing="50.0">
        <Button fx:id="prevButton" onAction="#onPrevPage" mnemonicParsing="false" text="Назад" />
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addFile" prefHeight="25.0" prefWidth="133.0" text="Добавить" />
        <Button fx:id="nextButton" onAction="#onNextPage" mnemonicParsing="false" text="Дальше" />
    </HBox>


</VBox>
