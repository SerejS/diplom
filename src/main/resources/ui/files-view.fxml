<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="665.0" spacing="20.0" style="-fx-background-color: D7D2FB;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serejs.diplom.desktop.ui.controllers.FilesViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Добавление файлов">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TableView fx:id="table" prefHeight="397.0" prefWidth="625.0"/>
    <HBox alignment="CENTER" prefHeight="26.0" prefWidth="271.0" spacing="50.0">
        <Button fx:id="prevButton" onAction="#onPrevPage" mnemonicParsing="false" text="Назад" />
        <Button fx:id="deleteButton" onAction="#deleteRow" mnemonicParsing="false" prefHeight="25.0" prefWidth="133.0" text="Удалить" />
        <Button fx:id="addButton" onAction="#openModal" mnemonicParsing="false" prefHeight="25.0" prefWidth="133.0" text="Добавить" />
        <Button fx:id="nextButton" onAction="#onNextPage" mnemonicParsing="false" text="Дальше" />
    </HBox>


</VBox>
